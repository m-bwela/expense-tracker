# Server Port
PORT=5000

# Database Configuration
DB_DATABASE=expense_tracker
DB_USER=postgres
DB_HOST=localhost
DB_PASSWORD=your_password_here
DB_PORT=5432

# Alternative: Use DATABASE_URL for platforms like Render
# Uncomment and use this instead of individual DB_ variables if your platform provides it
# DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret - Generate a secure random string
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Node Environment
NODE_ENV=development

# CORS Origin - Set to your frontend URL in production
# For development, use * to allow all origins
# For production, set to your frontend domain(s), e.g., https://your-app.vercel.app
CORS_ORIGIN=*
